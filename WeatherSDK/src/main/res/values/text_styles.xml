<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RegularFont">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MediumFont">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BoldFont">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <style name="M3BodyLarge" parent="RegularFont">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="M3BodyLarge.Bold" parent="M3BodyLarge">
        <item name="android:textStyle">bold</item>

    </style>

    <style name="M3TitleLarge" parent="RegularFont">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="M3BodySmall" parent="RegularFont">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

</resources>